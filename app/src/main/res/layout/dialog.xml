<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    tools:ignore="RtlCompat"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

            <ImageView
                android:id="@+id/imageDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/silverS"


                />

            <com.example.duaa.boxpoint.view.FontButtonRegular
                android:id="@+id/nameCategory"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="20dp"
                android:background="@drawable/background_button"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="بيتزا يونانية"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border_view"
                android:orientation="vertical">

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="220"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textSize="14sp"
                    android:textColor="@color/Silver"
                    android:paddingBottom="5dp"


                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border_view"
                android:orientation="vertical">

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:id="@+id/disCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="220"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="@string/disCount"
                    android:textColor="@color/Silver"
                    android:paddingBottom="5dp"


                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border_view"
                android:orientation="vertical">

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:id="@+id/numberPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="220"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.example.duaa.boxpoint.view.FontTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/numberPoint"
                    android:textSize="14sp"
                    android:textColor="@color/Silver"
                    android:paddingBottom="5dp"


                    />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/Silver"
            >

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"

            >
            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/discountCode"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border_square"

                >


            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/disCount_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border_square"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"

                android:textSize="17sp"
                android:textStyle="bold" />

            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/disCount_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border_square"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"


                />

            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/disCount_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border_square"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"
                />


            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/disCount_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border_square"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"


            >

            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/priceAfterDiscount"
                android:textColor="@color/textColor"
                android:textSize="14sp"

                android:textStyle="bold" />



            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/disCountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:layout_marginBottom="30dp"

            >
            <com.example.duaa.boxpoint.view.FontTextViewRegular
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="السعر بعد الخصم"
                android:textSize="13sp"
                android:gravity="start"
                android:layout_weight="1"
                />
           <com.example.duaa.boxpoint.view.FontButtonRegular
               android:id="@+id/disCountBtn"
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:background="@drawable/background_discount"
               android:text="@string/disCount"
               android:textColor="@color/white"
               android:textSize="14sp"
               android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>